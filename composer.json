{
  "name": "maartendekker/inertia-tempest",
  "description": "The Tempest adapter for Inertia.js.",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Inertia\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Inertia\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "mago:lint": "vendor/bin/mago lint",
    "mago:fix": "vendor/bin/mago lint --fix",
    "mago:fmt": "vendor/bin/mago fmt",
    "rector": "vendor/bin/rector process --no-ansi",
    "qa": [
      "@mago:fmt",
      "@rector",
      "@mago:lint",
      "@test"
    ]
  },
  "require": {
    "php": "^8.4",
    "ext-json": "*",
    "tempest/framework": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.3.15",
    "rector/rector": "^2.1.7",
    "carthage-software/mago": "1.0.0-beta.24",
    "mockery/mockery": "^1.6.12"
  },
  "suggest": {
    "ext-pcntl": "Recommended when running the Inertia SSR server via the `inertia:start-ssr` tempest command."
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "carthage-software/mago": true
    }
  }
}
